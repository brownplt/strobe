<view height="265" width="160" ondock="pause()" onundock="pause()"
  onminimize="pause()" onopen="view_onOpen()" onpopin="pause()"
  onpopout="pause()" onrestore="pause()" onsize="pause()" onsizing="pause()"
 >
  <img name="backgroundImage" x="0" y="0" src="images\background.png"
   />
  <div height="242" name="backgroundBorder" opacity="100" width="152"
    x="4" y="4" background="#FFFFFF"/>
  <div enabled="true" height="240" hitTest="htclient" name="divBackground"
    width="150" x="5" y="5" onfocusin="gameFocus()" onfocusout="gameLeave()"
    onkeydown="gameKeyDown()" onkeyup="gameKeyUp()" background="#000000"/>
  <button height="22" name="btnStart" width="60" x="50" y="200" onclick="gameStart()"
    downImage="stock_images\button_down.png" image="stock_images\button_up.png"
    overImage="stock_images\button_over.png" caption="&strStart;"/>
  <div height="12" name="div1" opacity="100" width="152" x="4" y="247"
    background="#FFFFFF"/>
  <label height="30" name="labelStatus" width="150" x="5" y="125" align="center"
    bold="true" color="#FFFFFF" size="12" valign="middle">&strPaused;
  </label>
  <label height="15" name="labelLevel" width="35" x="5" y="245" align="right"
    size="8">&strLevel;
  </label>
  <label height="16" name="labelLines" width="35" x="80" y="245" align="right"
    size="8"/>
  <label height="15" name="infoLevel" width="30" x="40" y="245" bold="true"
    size="8" valign="middle">1
  </label>
  <label height="15" name="infoLines" width="25" x="125" y="245" bold="true"
    size="8" valign="middle">0
  </label>
  <script src="jstrace.js" />
  <script src="main_cc.js" />
  <script src="tetris_cc.js" />
</view>
